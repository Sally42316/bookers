<!DOCTYPE html>
<html lang="ja">
<head>
  <title>WebCampBackendNew</title>
  <meta charset="UTF-8"/>

</head>

<body>
<h2><strong>Books</strong></h2>


<div class="table">
        <table>
                <tr>
                    <th class="title"><p>Title</p></th>
                    <th class="body"><p>Body</p></th>
                </tr>
        </table>

    <% @books.each do |book| %>

        <table>
                <tr>
                    <td class="table-title"><span><%= book.title %></span></td>
                    <td class="table-body"><span><%= book.body %></span></td>
                    <td class="table-link"><%= link_to "Show", book_path(book.id) %></td>
                    <td class="table-link"><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td class="table-link"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
                </tr>
        </table>
    <% end %>

</div>


<div class="newbook">
  <h2><strong>New book</strong></h2>

<% if @book.errors.any? %>
    <%= @book.errors.count %>errors occurred
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="newbook-title">
    <p>Title</p>
    <%= f.text_field :title %>
    </div>
     
    <div class="newbook-text">
    <p>Body</p>
    <%= f.text_area :body %>
    </div>
      
    <%= f.submit 'Create Book' %>
  <% end %>
</div>


  </body>
</html>